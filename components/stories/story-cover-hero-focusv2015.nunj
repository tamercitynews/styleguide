<article class="story hero-story focus-cover cover-hero flx-container">
		<header class="story-header flx-container flx-col">
			<a href="<!-- @path article.html -->" class="link">
				<figure class="story-media media-full video-media">
					<span class="play-video-icon"></span>
					<img src="{{ stories[0].thumb.horizontal.hi }}">
				</figure>
			</a>
			<h2 class="story-heading heading-md">
        <a href="<!-- @path article.html -->" class="link">{{ stories[0].headline }}</a>
      </h2>
      <p class="summary story-summary hidden-md hidden-lg">{{ stories[0].summary }}</p>
		</header>
</article>
