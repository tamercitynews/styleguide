<div class="story sponsored-story">
  <figure class="story-media">
    <a href="#">
      <picture>
        <source srcset="{{imgsrc}}" media="(min-width: 46.25em)">
        <img src="{{imgsrc}}" alt="Alt title">
      </picture>
    </a>
  </figure>
  <header class="story-header">
    <h3 class="story-heading story-heading">  
      <a class="link" href="#">{{title}}</a>
    </h3>
    <span class="text-sm">sponsorizzato da "{{item.sponsor}}"</span>
  </header>  
</div>