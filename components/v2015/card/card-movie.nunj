<article class="block block--card block--card-tile">
  <div class="block__media">
    <a href="{{item.link}}" class="block-link">
      <figure class="card-media">
        <img src="{{item.image}}" alt="{{item.title}}" title="{{item.title}}">
      </figure>
    <span class="label label--inverse label--inverse-cultura">{{item.genre}}</span>
    </a>
  </div>
  <h2 class="block__heading"><a href="{{item.link}}" class="link">{{item.title}}</a></h2>
  {% render "@rating" %}
</article>
