<article class="story card-item-light">
  <span class="label badge-label">Label</span>
  <figure class="story-media media-full">
    <a href="#" class="block-link">
      <img src="{{imgsrc}}" alt="Alt title">
    </a>
  </figure>
  <header class="story-header">
    <a href="#" class="block-link">
      <h3 class="story-heading heading-std">{{title}}</h3>
    </a>
    <p class="summary story-summary hidden-xs">{{subtitle}}</p>
  </header>
</article>
