<article class="story">
  <figure class="story-media media-sm">
    <a href="#">
      <picture>
        <source srcset="{{ story.thumb.horizontal.medium }}" media="(min-width: 62.5em)">
        <img srcset="{{ story.thumb.square.low }}" alt="Stazione Termini Look">
      </picture>
    </a>
  </figure>
  <header class="story-header">
    <h4 class="story-heading heading-sm">
      <a href="#" class="link">{{ story.headline }}</a>
    </h4>
  </header>
</article>
